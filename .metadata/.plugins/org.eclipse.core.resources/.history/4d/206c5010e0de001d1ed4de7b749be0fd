	public static void main(String[] args) {
//		Tema 8 BBDD
		try {
			Connection conexion = DriverManager.getConnection(
					"jdbc:mysql://127.0.0.1:3306/bicicletasdaw", //también se puede poner localhost:nº del puerto/el nombre de la base de datos
					"root","");
			Statement smt=conexion.createStatement(); //siempre java.sql
		} catch (SQLException e) {
			e.printStackTrace();
		}

	}

}
