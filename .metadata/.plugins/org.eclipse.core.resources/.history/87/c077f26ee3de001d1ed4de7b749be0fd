package apuntes17;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
//		Tema 8 BBDD
		
		Scanner sc=new Scanner(System.in);
		
		try {
			//conectar
			Connection conexion = DriverManager.getConnection(
					"jdbc:mysql://127.0.0.1:3306/bicicletasdaw", //también se puede poner localhost:nº del puerto/el nombre de la base de datos
					"root","");
			Statement smt=conexion.createStatement(); //siempre java.sql
			//usar
			smt.executeUpdate("insert into cliente values('prueba2@prueba.es','123123',54647856,'pruebaman');");
			//desconectar
			smt.close();
			conexion.close();
		} catch (SQLException e) {
			e.printStackTrace();
		}

	}

}
