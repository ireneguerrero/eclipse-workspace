<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings for Oracle -->
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle12cDialect</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
        <property name="hibernate.connection.username">SYSTEM</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="show_sql">true</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="tercerEjercicio.Fabricante" />
		<mapping class="cuartoEjercicio.Alumno" />
		<mapping class="primerEjercicio.Empresa" />
		<mapping class="segundoEjercicio.Categorias" />
		<mapping class="quintoEjercicio.Producto" />
    </session-factory>
</hibernate-configuration>
